---
import { getCollection } from 'astro:content';
import path from 'path-browserify';
import { Icon } from 'astro-icon/components';
import PLIcon from './icons/PLIcon.astro';
import ENIcon from './icons/ENIcon.astro';

const publications = await getCollection('publications');
const baseUrl = import.meta.env.BASE_URL;

const polishPublications = publications.filter(p => p.data.lang === 'pl');
const englishPublications = publications.filter(p => p.data.lang === 'en');
---

<h2 class="text-2xl font-bold mt-8 mb-4 flex items-center gap-2">
  <PLIcon />
  <span>Publikacje polskie</span>
</h2>
<div class="list-container">
  <ul class="publication-list">
    {polishPublications.map((publication) => (
      <li class="publication-item">
        <a href={path.join(baseUrl, 'publications', publication.slug)} class="publication-link">
          <div>
            <span class="text-sm md:text-base">{publication.data.author}</span>
            <span class="text-base md:text-lg font-semibold">{publication.data.title}</span>
          </div>
          <Icon name="mdi:arrow-right" class="list-arrow-icon" />
        </a>
      </li>
    ))}
  </ul>
</div>

<h2 class="text-2xl font-bold mt-8 mb-4 flex items-center gap-2">
  <ENIcon />
  <span>Publikacje angielskie</span>
</h2>
<div class="list-container">
  <ul class="publication-list">
    {englishPublications.map((publication) => (
      <li class="publication-item">
        <a href={path.join(baseUrl, 'publications', publication.slug)} class="publication-link">
          <div>
            <span class="text-sm md:text-base">{publication.data.author}</span>
            <span class="text-base md:text-lg font-semibold">{publication.data.title}</span>
          </div>
          <Icon name="mdi:arrow-right" class="list-arrow-icon" />
        </a>
      </li>
    ))}
  </ul>
</div>

<p id="no-results-message" class="no-results-message" style="display: none;">It's nothing here...</p>

<style>
  .no-results-message {
    padding: 2rem;
    text-align: center;
    font-style: italic;
    opacity: 0.7;
  }
  .publication-item.hidden {
    display: none;
  }
  .publication-link > div {
    display: flex;
    flex-direction: column;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const searchBar = document.getElementById('search-bar');
    const publicationItems = Array.from(document.querySelectorAll('.publication-item'));
    const animations = new Map();

    searchBar.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase().trim();
      const animationPromises = [];

      publicationItems.forEach(item => {
        const title = item.querySelector('.title')?.textContent.toLowerCase().trim() || '';
        const author = item.querySelector('.author')?.textContent.toLowerCase().trim() || '';
        const isVisible = title.includes(searchTerm) || author.includes(searchTerm);
        const isHidden = item.classList.contains('hidden');

        if (animations.has(item)) {
          animations.get(item).cancel();
        }

        if (isVisible && isHidden) {
          item.classList.remove('hidden');
          const animation = item.animate([
            { opacity: 0 },
            { opacity: 1 }
          ], { duration: 300, easing: 'ease-out' });
          animations.set(item, animation);
        } else if (!isVisible && !isHidden) {
          const animation = item.animate([
            { opacity: 1 },
            { opacity: 0 }
          ], { duration: 300, easing: 'ease-in' });
          animations.set(item, animation);
          
          const promise = new Promise(resolve => {
            animation.onfinish = () => {
              item.classList.add('hidden');
              animations.delete(item);
              resolve(null);
            };
          });
          animationPromises.push(promise);
        }
      });

      Promise.all(animationPromises).then(() => {
        const visibleCount = publicationItems.filter(item => !item.classList.contains('hidden')).length;
        const noResultsMessage = document.getElementById('no-results-message');
        if (noResultsMessage) {
          if (visibleCount === 0 && searchTerm) {
            noResultsMessage.style.display = 'block';
          } else {
            noResultsMessage.style.display = 'none';
          }
        }
      });
    });
  });
</script>
